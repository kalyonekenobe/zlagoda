@using Zlagoda.Enums;

<div class="container pt-4 user-details">
    <div class="row mb-3 mt-2">
        <div class="col d-flex justify-content-between align-items-center flex-nowrap">
            <h4 class="text-start w-100">Інформація про категорію</h4>
            <a asp-action="Index" class="btn btn-sm btn-secondary d-inline" style="min-width: 100px;">Назад</a>
        </div>
    </div>
    <div class="row g-2">
        <div class="col-6">
            <label>Номер категорії</label>
            <br>
            <span>@Model.Category.category_number</span>
        </div>
        <div class="col-6">
            <label>Назва категорії</label>
            <br>
            <span>@Model.Category.category_name</span>
        </div>
    </div>
    <div class="row mt-5">
        <div class="col d-flex justify-content-between align-items-center flex-nowrap">
            <h5 class="text-start w-100">Інформація про продані товари даної категорії</h5>
        </div>
    </div>
    <div class="row">
        <div class="table-responsive mb-5">
            <table class="table table-hover table-bordered table-sm">
                <thead>
                    <tr>
                        <th scope="col">Товар</th>
                        <th scope="col">Кількість</th>
                    </tr>
                </thead>
                <tbody id="products-table">
                    @foreach (var product in Model.Products)
                    {
                        <tr>
                            <td>@product.product_name @(product.promotional_product ? "(акційний)" : "")</td>
                            <td>@product.sold_amount шт.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>