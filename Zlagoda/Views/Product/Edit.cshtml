@model Zlagoda.Models.EditProductViewModel

<div class="container pt-4">
    <div class="row mb-3 mt-2">
        <div class="col d-flex justify-content-between align-items-center flex-nowrap">
            <h4 class="text-start w-100">Редагування товару</h4>
            <a asp-action="Index" class="btn btn-sm btn-secondary d-inline" style="min-width: 100px;">Назад</a>
        </div>
    </div>
    <form method="POST" asp-action="Edit">
        @foreach (var error in Model.Errors)
        {
            <span class="error">@error<i class="fa-solid fa-xmark close"></i></span>
        }
        <div asp-validation-summary="All"></div>
        <div class="row g-3">
            <input asp-for="Product.id_product" type="hidden" class="form-control" required>

            <div class="col-12">
                <label asp-for="Product.product_name" class="form-label">Назва</label>
                <input asp-for="Product.product_name" type="text" class="form-control" required>
            </div>

            <div class="col-12">
                <label asp-for="Product.category_number" class="form-label">Категорія товару</label>
                <select asp-for="Product.category_number" class="form-select" required>
                    @foreach (var category in Model.Categories)
                    {
                        <option value="@category.category_number">@category.category_name</option>
                    }
                </select>
            </div>

            <div class="col-12">
                <label asp-for="Product.characteristics" class="form-label">Характеристики</label>
                <textarea asp-for="Product.characteristics" rows="6" class="form-control" required></textarea>
            </div>

            <div class="col-12">
                <button class="btn btn-primary w-100" type="submit">Зберегти зміни</button>
            </div>
        </div>
    </form>
</div>