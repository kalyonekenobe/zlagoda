@using Zlagoda.Business.Entities;
@using Zlagoda.Enums;
@using Zlagoda.Services;

@{
    var userRole = ClaimsService.GetUserFromClaims(Context.User).empl_role;
}

<style>
    .page-buttons {
        border: 2px solid;
        font-weight: 500;
        width: 175px;
    }

    .table-responsive {
        margin: 20px 0 40px 0;
    }
</style>
<div class="container-fluid pt-4">
    <div class="error-list mb-2">
        @foreach (var error in Model.Errors)
        {
            <span class="error">@error<i class="fa-solid fa-xmark close"></i></span>
        }
    </div>
    <div class="row mb-3">
        <div class="col d-flex justify-content-between align-items-center flex-nowrap">
            <h4 class="text-start w-100">Список постійних клієнтів магазину (додатково)</h4>
            <a asp-action="Index" class="btn btn-sm btn-secondary" style="min-width: 100px;">Назад</a>
        </div>
    </div>
    <div class="row justify-content-between align-items-end flex-wrap noprint">
        <div class="col-12 col-xl-8 search-container flex-wrap flex-md-nowrap">
            <form class="d-inline-flex col-12 col-md-9 flex-column">
                <label>Знайти постійних клієнтів, які купляли усі товари, які купили клієнти з прізвищем [прізвище клієнта]</label>
                <div class="form-group d-inline-flex w-100">
                    <input name="surname" type="text" class="form-control search w-100" placeholder="Пошук клієнта за прізвищем">
                    <button type="submit" class="btn btn-dark search-btn">Знайти</button>
                </div>
            </form>
        </div>
    </div>

    <!-- TABLE -->
    <div class="table-responsive">
        <table class="table table-striped table-sm printable" id="clients-table">
            <thead>
                <tr>
                    <th scope="col">Номер картки</th>
                    <th scope="col">Прізвище</th>
                    <th scope="col">Ім'я</th>
                    <th scope="col">По-батькові</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var client in Model.Clients)
                {
                    <tr>
                        <td>@client.card_number</td>
                        <td>@client.cust_surname</td>
                        <td>@client.cust_name</td>
                        <td>@client.cust_patronymic</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>