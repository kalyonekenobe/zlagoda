@using Zlagoda.Business.Entities;
@model Zlagoda.Models.EditEmployeeViewModel

<style>
    .container.content {
        width: 100%;
    }

    h4 {
        text-align: center;
    }

    input, select {
        border: 1px solid silver !important;
    }

    input[readonly] {
        border: 1px solid silver !important;
        color: #333333;
        background: rgba(0, 0, 0, 0.05) !important;
        box-shadow: none !important;
        outline: none !important;
    }

    .submit {
        font-weight: 500;
        width: 150px;
        margin: auto;
        margin-top: 15px;
        width: 100%;
    }
</style>
<div class="container content pt-4">
    <div class="row mb-3 mt-2">
        <div class="col d-flex justify-content-between align-items-center flex-nowrap">
            <h4 class="text-start w-100">Редагування працівника</h4>
            <a asp-action="Index" class="btn btn-sm btn-secondary d-inline" style="min-width: 100px;">Назад</a>
        </div>
    </div>
    <form method="POST" asp-action="Edit" method="POST">
        @foreach (var error in Model.Errors)
        {
            <span class="error">@error<i class="fa-solid fa-xmark close"></i></span>
        }
        <div asp-validation-summary="All"></div>
        <div class="row g-3">
            <div class="col-sm-12">
                <label asp-for="Employee.id_employee" class="form-label">Ідентифікатор</label>
                <input asp-for="Employee.id_employee" type="text" class="form-control" required readonly>
            </div>
            <div class="col-sm-12">
                <label asp-for="Employee.empl_password" class="form-label">Пароль</label>
                <input asp-for="Employee.empl_password" type="password" class="form-control">
            </div>
            <div class="col-sm-4">
                <label asp-for="Employee.empl_surname" class="form-label">Прізвище</label>
                <input asp-for="Employee.empl_surname" type="text" class="form-control" required>
            </div>
            <div class="col-sm-4">
                <label asp-for="Employee.empl_name" class="form-label">Ім'я</label>
                <input asp-for="Employee.empl_name" type="text" class="form-control" required>
            </div>
            <div class="col-sm-4">
                <label asp-for="Employee.empl_patronymic" class="form-label">По-батькові</label>
                <input asp-for="Employee.empl_patronymic" type="text" class="form-control">
            </div>
            <div class="col-sm-6">
                <label asp-for="Employee.empl_role" class="form-label">Посада</label>
                <select asp-for="Employee.empl_role" class="form-select" required>
                    <option value="Cashier">Cashier</option>
                    <option value="Manager">Manager</option>
                </select>
            </div>
            <div class="col-sm-6">
                <label asp-for="Employee.salary" class="form-label">Зарплата</label>
                <input asp-for="Employee.salary" min="0" step=".01" type="number" class="form-control" required>
            </div>
            <div class="col-6">
                <label asp-for="Employee.date_of_start" class="form-label">Дата початку роботи</label>
                <input asp-for="Employee.date_of_start" type="date" class="form-control" required>
            </div>
            <div class="col-6">
                <label asp-for="Employee.date_of_birth" class="form-label">Дата народження</label>
                <input asp-for="Employee.date_of_birth" type="date" class="form-control" required>
            </div>
            <div class="col-sm-12">
                <label asp-for="Employee.phone_number" class="form-label">Контактний телефон</label>
                <input asp-for="Employee.phone_number" type="tel" class="form-control" required>
            </div>
            <div class="col-sm-4">
                <label asp-for="Employee.city" class="form-label">Місто</label>
                <input asp-for="Employee.city" type="text" class="form-control" required>
            </div>
            <div class="col-sm-4">
                <label asp-for="Employee.street" class="form-label">Вулиця</label>
                <input asp-for="Employee.street" type="text" class="form-control" required>
            </div>
            <div class="col-sm-4">
                <label asp-for="Employee.zip_code" class="form-label">Індекс</label>
                <input asp-for="Employee.zip_code" type="text" class="form-control" required>
            </div>
            <br>
            <div class="col-12">
                <button class="btn btn-primary submit" type="submit">Зберегти зміни</button>
            </div>
        </div>
    </form>
</div>